<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.androidscrum.menuUsuarioActivity"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="178dp"
        android:layout_height="27dp"
        android:text="MENU USUARIO"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="176dp"
        android:layout_height="31dp"
        android:text="INSERTAR ID PROYECTO"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/txtIdPro"
        android:layout_width="177dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/btnObtnerPro"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:text="VER PROYECTO"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/btnVerMiTarea"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:text="VER TODAS MIS TAREAS"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp" />
    <Button
        android:id="@+id/btnConfigUs"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:text="MODIFICAR CUENTA"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/btnCerrarS"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="CERRAR SESION"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="16dp" />


</LinearLayout>
